pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'python:3.9'
                    reuseNode true
                    args '-u root:root -v /tmp/.pipcache:/root/.cache'
                }
            }
            steps {
                sh "./test-scrapers.sh"
            }
        }
    }
    post {
        always {
            cucumber 'test-scraper-results.json'
        }
    }
}
