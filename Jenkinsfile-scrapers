pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Test') {
            agent {
                dockerfile true
            }
            steps {
                sh "behave -D record_mode=all --tags=-skip -f json.cucumber -o test-scraper-results.json features/scrape.feature"
            }
        }
    }
    post {
        always {
            cucumber 'test-scraper-results.json'
        }
    }
}